<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:ECS.Controls">
    <ControlTemplate x:Key="DesignerItemTemplate" TargetType="{x:Type controls:DesignerItem}">
        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}"
                BorderThickness="{TemplateBinding BorderThickness}">
            <ContentPresenter Content="{TemplateBinding Content}" />
        </Border>
    </ControlTemplate>
    <Style TargetType="{x:Type controls:DesignerItem}">
        <Setter Property="Template" Value="{StaticResource DesignerItemTemplate}"/>
        <Setter Property="Background" Value="Transparent"/>
    </Style>
</ResourceDictionary>
